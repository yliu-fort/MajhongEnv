#:kivy 2.1.0
#:import dp kivy.metrics.dp

<PlayerPanel>:
    orientation: 'vertical'
    size_hint: None, None
    width: dp(300)
    height: max(self.minimum_height, dp(160))
    padding: dp(12)
    spacing: dp(6)
    canvas.before:
        Color:
            rgba: (0.05, 0.07, 0.10, 0.95) if not self.dealer else (0.08, 0.10, 0.16, 0.98)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(12)]
        Color:
            rgba: self.accent_color if self.is_current else self.muted_text_color
        Line:
            rounded_rectangle: (*self.pos, *self.size, dp(12))
            width: dp(1.4)
        Color:
            rgba: self.accent_color if self.riichi else (0, 0, 0, 0)
        Line:
            points: [self.x + dp(12), self.top - dp(12), self.right - dp(12), self.top - dp(12)]
            width: dp(2)
    Label:
        text: root.seat_label
        color: root.muted_text_color
        font_size: '12sp'
        size_hint_y: None
        height: self.texture_size[1] if self.texture_size[1] > 0 else dp(16)
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'
    BoxLayout:
        size_hint_y: None
        height: dp(26)
        spacing: dp(6)
        Label:
            text: root.display_name
            color: root.text_color
            bold: True
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'
        Label:
            text: 'Dealer' if root.dealer else ''
            color: root.accent_color
            size_hint_x: None
            width: dp(72)
            text_size: self.size
            halign: 'right'
            valign: 'middle'
    Label:
        text: root.hand_text
        font_size: '16sp'
        color: root.text_color
        size_hint_y: None
        height: self.texture_size[1] if self.texture_size[1] > 0 else dp(26)
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'
    Label:
        text: root.discard_text
        font_size: '14sp'
        color: root.muted_text_color
        size_hint_y: None
        height: self.texture_size[1] if self.texture_size[1] > 0 else dp(24)
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'
    Label:
        text: root.meld_text
        font_size: '13sp'
        color: root.muted_text_color
        size_hint_y: None
        height: self.texture_size[1] if self.texture_size[1] > 0 else dp(20)
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'
    BoxLayout:
        size_hint_y: None
        height: dp(22)
        spacing: dp(8)
        Label:
            text: f"Score: {root.score_text}" if root.score_text else 'Score: -'
            color: root.text_color
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'
        Label:
            text: f"Δ {root.score_delta_text}" if root.score_delta_text else 'Δ 0'
            color: root.danger_color if root.score_delta_text and not root.score_delta_text.startswith('+') else (root.accent_color if root.score_delta_text and root.score_delta_text.startswith('+') else root.muted_text_color)
            size_hint_x: None
            width: dp(90)
            text_size: self.size
            halign: 'right'
            valign: 'middle'
    Label:
        text: root.wind_text
        font_size: '12sp'
        color: root.muted_text_color
        size_hint_y: None
        height: self.texture_size[1] if self.texture_size[1] > 0 else dp(16)
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'

<MahjongTable>:
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: root.play_area_color
        RoundedRectangle:
            pos: root.play_area_pos
            size: root.play_area_size
            radius: [dp(16)]
        Color:
            rgba: root.play_area_border
        Line:
            rounded_rectangle: (*root.play_area_pos, *root.play_area_size, dp(16))
            width: dp(3)
    canvas.after:
        Color:
            rgba: root.panel_color
        RoundedRectangle:
            pos: root.center_panel_pos
            size: root.center_panel_size
            radius: [dp(12)]
        Color:
            rgba: root.panel_border
        Line:
            rounded_rectangle: (*root.center_panel_pos, *root.center_panel_size, dp(12))
            width: dp(2)
        Color:
            rgba: root.accent_color if root.dealer_marker_visible else (0, 0, 0, 0)
        Line:
            circle: (root.dealer_marker_pos[0], root.dealer_marker_pos[1], dp(10))
            width: dp(2)
    RelativeLayout:
        size_hint: None, None
        size: root.center_panel_size
        pos: root.center_panel_pos
        Label:
            text: root.round_label
            color: root.text_color
            font_size: '22sp'
            bold: True
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.84}
            text_size: self.width, None
            halign: 'center'
            valign: 'top'
        Label:
            text: root.honba_text
            color: root.muted_text_color
            font_size: '14sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.66}
            text_size: self.width, None
            halign: 'center'
        Label:
            text: root.riichi_text
            color: root.muted_text_color
            font_size: '14sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.50}
            text_size: self.width, None
            halign: 'center'
        Label:
            text: root.tiles_text
            color: root.muted_text_color
            font_size: '14sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.34}
            text_size: self.width, None
            halign: 'center'
        Label:
            text: root.dora_text
            color: root.text_color
            font_size: '13sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.18}
            text_size: self.width, None
            halign: 'center'
        Label:
            text: root.ura_text
            color: root.muted_text_color
            font_size: '13sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.06}
            text_size: self.width, None
            halign: 'center'
    Label:
        text: root.score_strings[0] if len(root.score_strings) > 0 else ''
        color: root.score_colors[0] if len(root.score_colors) > 0 else root.text_color
        size_hint: None, None
        center_x: root.score_positions[0][0]
        center_y: root.score_positions[0][1]
        text_size: self.texture_size
    Label:
        text: root.score_strings[1] if len(root.score_strings) > 1 else ''
        color: root.score_colors[1] if len(root.score_colors) > 1 else root.text_color
        size_hint: None, None
        center_x: root.score_positions[1][0]
        center_y: root.score_positions[1][1]
        text_size: self.texture_size
    Label:
        text: root.score_strings[2] if len(root.score_strings) > 2 else ''
        color: root.score_colors[2] if len(root.score_colors) > 2 else root.text_color
        size_hint: None, None
        center_x: root.score_positions[2][0]
        center_y: root.score_positions[2][1]
        text_size: self.texture_size
    Label:
        text: root.score_strings[3] if len(root.score_strings) > 3 else ''
        color: root.score_colors[3] if len(root.score_colors) > 3 else root.text_color
        size_hint: None, None
        center_x: root.score_positions[3][0]
        center_y: root.score_positions[3][1]
        text_size: self.texture_size
    Label:
        text: root.seat_labels[0] if len(root.seat_labels) > 0 else ''
        color: root.muted_text_color
        size_hint: None, None
        center_x: root.label_positions[0][0]
        center_y: root.label_positions[0][1]
        text_size: self.texture_size
    Label:
        text: root.seat_labels[1] if len(root.seat_labels) > 1 else ''
        color: root.muted_text_color
        size_hint: None, None
        center_x: root.label_positions[1][0]
        center_y: root.label_positions[1][1]
        text_size: self.texture_size
    Label:
        text: root.seat_labels[2] if len(root.seat_labels) > 2 else ''
        color: root.muted_text_color
        size_hint: None, None
        center_x: root.label_positions[2][0]
        center_y: root.label_positions[2][1]
        text_size: self.texture_size
    Label:
        text: root.seat_labels[3] if len(root.seat_labels) > 3 else ''
        color: root.muted_text_color
        size_hint: None, None
        center_x: root.label_positions[3][0]
        center_y: root.label_positions[3][1]
        text_size: self.texture_size

<MahjongBoard>:
    orientation: 'vertical'
    spacing: dp(12)
    padding: dp(12)
    BoxLayout:
        size_hint_y: 0.24
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            PlayerPanel:
                id: north_panel
                size_hint: None, None
                width: min(root.width * 0.68, dp(720))
                height: min(self.minimum_height, self.parent.height - dp(12))
    BoxLayout:
        size_hint_y: 0.52
        spacing: dp(12)
        AnchorLayout:
            size_hint_x: 0.27
            anchor_x: 'center'
            anchor_y: 'center'
            PlayerPanel:
                id: west_panel
                size_hint: None, None
                width: min(root.width * 0.28, dp(340))
                height: min(self.minimum_height, self.parent.height - dp(16))
        MahjongTable:
            id: table
            size_hint: 0.46, 1
        AnchorLayout:
            size_hint_x: 0.27
            anchor_x: 'center'
            anchor_y: 'center'
            PlayerPanel:
                id: east_panel
                size_hint: None, None
                width: min(root.width * 0.28, dp(340))
                height: min(self.minimum_height, self.parent.height - dp(16))
    BoxLayout:
        size_hint_y: 0.24
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            PlayerPanel:
                id: south_panel
                size_hint: None, None
                width: min(root.width * 0.76, dp(780))
                height: min(self.minimum_height, self.parent.height - dp(12))

<MahjongRoot>:
    orientation: 'vertical'
    spacing: dp(16)
    padding: dp(16)
    canvas.before:
        Color:
            rgba: 12/255., 30/255., 60/255., 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: None
        height: dp(48)
        padding: 0, 0, 0, dp(4)
        Label:
            text: root.phase_text
            color: 170/255., 230/255., 1, 1
            bold: True
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: dp(280)
            Label:
                text: root.reward_text
                color: 235/255., 235/255., 235/255., 1
                size_hint_y: None
                height: dp(26)
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            Label:
                text: 'Episode finished' if root.episode_done else ''
                color: 220/255., 120/255., 120/255., 1
                size_hint_y: None
                height: dp(20)
                text_size: self.size
                halign: 'right'
                valign: 'middle'
    MahjongBoard:
        id: board
        size_hint_y: 0.6
    BoxLayout:
        size_hint_y: 0.24
        spacing: dp(16)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.68
            Label:
                text: root.status_text
                color: 235/255., 235/255., 235/255., 1
                size_hint_y: None
                height: dp(28)
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                bar_width: dp(8)
                scroll_type: ['bars', 'content']
                GridLayout:
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 0, dp(6)
                    spacing: dp(4)
                    Label:
                        text: root.log_text
                        color: 200/255., 220/255., 240/255., 1
                        size_hint_y: None
                        height: self.texture_size[1] if self.texture_size[1] > 0 else dp(20)
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'top'
        AnchorLayout:
            size_hint_x: 0.32
            anchor_x: 'right'
            anchor_y: 'bottom'
            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: dp(220)
                height: dp(190)
                spacing: dp(10)
                ToggleButton:
                    text: 'Pause on Score'
                    size_hint_y: None
                    height: dp(54)
                    state: 'down' if root.pause_on_score else 'normal'
                    on_release: root.on_toggle_pause()
                ToggleButton:
                    text: 'Auto Next'
                    size_hint_y: None
                    height: dp(54)
                    state: 'down' if root.auto_advance else 'normal'
                    on_release: root.on_toggle_auto()
                Button:
                    text: 'Next'
                    size_hint_y: None
                    height: dp(54)
                    disabled: root.auto_advance
                    on_release: root.on_step()
